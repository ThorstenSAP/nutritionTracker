{
  "_version": "1.21.0",
  "sap.app": {
    "id": "tm.nutriTracker.myUI5App",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "applicationVersion": {
      "version": "1.0.0"
    },
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
		"dataSources": {
			"mainService": {
				"uri": "/odataService/",
				"type": "OData",
				"settings": {
					"odataVersion": "4.0"
				}
			}
		}
  },
  "sap.ui": {
    "technology": "UI5",
    "icons": {
      "icon": "",
      "favIcon": "",
      "phone": "",
      "phone@2": "",
      "tablet": "",
      "tablet@2": ""
    },
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    }
  },
  "sap.ui5": {
    "flexEnabled": true,
    "rootView": {
      "viewName": "tm.nutriTracker.myUI5App.view.App",
      "type": "XML",
      "async": true,
      "id": "idAppControl"
    },
    "dependencies": {
      "minUI5Version": "1.60.0",
      "libs": {
        "sap.ui.core": {},
        "sap.m": {},
        "sap.f": {},
        "sap.ui.layout": {}
      }
    },
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "models": {
      "": {
        "dataSource": "mainService",
        "settings": {
          "synchronizationMode": "None"
        }
      },
      "appView": {
        "type": "sap.ui.model.json.JSONModel",
        "defaultBindingMode": "TwoWay"
      },
      "newNutrient": {
        "type": "sap.ui.model.json.JSONModel",
        "defaultBindingMode": "TwoWay"
      },
      "calc": {
        "type": "sap.ui.model.json.JSONModel",
        "defaultBindingMode": "TwoWay"
      },
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "tm.nutriTracker.myUI5App.i18n.i18n"
        }
      }
    },
    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    },
    "routing": {
      "config": {
        "routerClass": "sap.f.routing.Router",
        "viewType": "XML",
        "viewPath": "tm.nutriTracker.myUI5App.view",
        "controlId": "flexColumnLayout",
        "async": true
      },
      "routes": [
        {
          "name": "RouteMainView",
          "pattern": "",
          "target": ["TargetMainView"]
        },
        {
          "name": "NutriDetailView",
          "pattern": "NutriDetailView/{ID}",
          "target": ["TargetMainView", "NutriDetailView"]
        }
      ],
      "targets": {
        "TargetMainView": {
          "viewType": "XML",
          "viewLevel": 1,
          "viewName": "MainView",
					"controlAggregation": "beginColumnPages"
        },
        "NutriDetailView": {
          "viewType": "XML",
          "viewLevel": 2,
          "viewName": "DetailView",
          "controlAggregation": "midColumnPages"
        }
      }
    }
  }
}
