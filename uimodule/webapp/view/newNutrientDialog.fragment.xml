<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
	<Dialog
        title="{i18n>newNutrientDialog.Title}"
        id="newNutrientDialog">
    <f:SimpleForm>
        <f:content>
                <Label text="{i18n>mealNutritionValues.Label.Name}" />
                <Input value="{name}"/>
                <Label text="{i18n>mealNutritionValues.Label.Energy}" />
                <Input value="{energy}" />
                <Label text="{i18n>mealNutritionValue.Label.Proteins}" />
                <Input value="{proteins}" />
                <Label text="{i18n>mealNutritionValues.Label.Carbs}" />
                <Input value="{carbs}" />
                <Label text="{i18n>mealNutritionValues.Label.Fats}" />
                <Input value="{fats}" />
                <Label text="{i18n>mealNutritionValues.Label.Fibers}" />
                <Input value="{fibers}" />
        </f:content>
    </f:SimpleForm>
        <buttons>
        <Button
            text="{i18n>Dialog.Button.Cancel}"
            press="cancelDialog" />
        <Button
            text="{i18n>Dialog.Button.Submit}"
            press="confirmNewNutrient" />
    </buttons>
	</Dialog>
</core:FragmentDefinition>